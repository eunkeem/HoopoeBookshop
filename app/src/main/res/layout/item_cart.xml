<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    card_view:cardElevation="3dp"
    card_view:cardCornerRadius="20sp"
    card_view:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="35dp">

        <CheckBox
            android:id="@+id/checkBox_item_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="30sp"/>

        <ImageView
            android:id="@+id/imv_book_item_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:maxHeight="160sp"
            android:layout_toEndOf="@+id/checkBox_item_cart"
            app:srcCompat="@drawable/img_book_main"/>

        <TextView
            android:id="@+id/tv_sub_item_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textSize="22sp"
            android:textColor="#454545"
            android:layout_alignTop="@id/imv_book_item_cart"
            android:layout_toRightOf="@id/imv_book_item_cart"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="35dp"/>

        <TextView
            android:id="@+id/tv_price_item_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가격"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_alignStart="@+id/tv_sub_item_cart"
            android:layout_below="@+id/tv_sub_item_cart"
            android:layout_marginTop="40sp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>